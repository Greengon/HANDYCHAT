<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    tools:context=".Fragments.EditCommentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Image input -->

        <!-- Address input -->


        <!-- Description input -->
        <EditText
            android:id="@+id/newFragmentEditTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_toRightOf="@id/newFragmentTextViewDescription"
            android:ems="10"
            android:gravity="top|left"
            android:hint="Put comment here...."
            android:inputType="textMultiLine"
            android:lines="8"
            android:maxLines="20"
            android:scrollbars="vertical" />

        <!-- Save button -->
        <Button
            android:id="@+id/newCommentSaveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@color/colorPrimary"
            android:text="Save" />

        <!-- Progress bar will be shown only after saved pressed -->
        <ProgressBar
            android:id="@+id/newCommentProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:layout_height="30dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/new_comment_pb"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</FrameLayout>