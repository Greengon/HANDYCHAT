<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    tools:context=".Fragments.ViewCommentFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/comment_created_user_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="userImage"
        android:scaleType="fitStart"
        tools:srcCompat="@tools:sample/avatars" />
    <TextView
        android:id="@+id/comment_user_name"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/comment_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/comment_view_text"
        android:layout_width="match_parent"
        android:layout_height="350dp" />

    <Button
        android:id="@+id/editCommentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Edit Comment" />
</LinearLayout>
